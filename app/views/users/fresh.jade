extends ../shared/template

block content
  h1= title

    form(action='register', method='POST')
      fieldset
        legend Register
        .row
          .small-12.columns
            label Email
            input(type='email', name='email', autofocus)
            label Password
            input(name='password', type='password')
            label Role
            select(name='role')
              option Guest
              option Host
            button.tiny.radius Register

